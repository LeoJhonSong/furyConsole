#! /usr/bin/env python3
# -*- coding: UTF-8 -*-
# Powerful client of furyTerminal

import os
import sys


def sh(command):
    os.system(command)


def runServer():
    sh('python ./manage.py runserver 0:8000')


def testModule():
    pass


def makeMigrationMigrate():
    sh('''
    python ./manage.py makemigrations
    python ./manage.py migrate
    ''')


def setup():
    sh('''
    sudo apt install bc
    sudo apt install python3 python
    pip3 install django
    pip3 install python-can
    ''')


def staticIP():
    pass


def config():
    options = {
        'IP': staticIP,
    }
    pass


command = {
    'default': runServer,
    'r': runServer,
    't': testModule,
    'm': makeMigrationMigrate,
    'setup': setup,
    'config': config,
}

main = command[sys.argv[1] if len(sys.argv) > 1 else 'default']
main()
